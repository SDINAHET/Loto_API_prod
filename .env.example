# Configuration des bases de données

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=lotodb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# MongoDB
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=lotodb
MONGODB_USER=lotouser
MONGODB_PASSWORD=lotopass
MONGODB_AUTH_SOURCE=admin

# Configuration du serveur
SERVER_PORT=8082
SPRING_PROFILES_ACTIVE=prod

# Logs
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_FDJLOTO=DEBUG

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRATION=86400000

# Java Options
JAVA_OPTS=-Xmx512m -Xms256m -Dspring.profiles.active=prod

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_KEY_STORE=keystore.p12
SSL_KEY_STORE_PASSWORD=changeit
SSL_KEY_ALIAS=tomcat

# Chemins des bases de données
SQLITE_DB_PATH=./loto.db
MONGODB_DATA_PATH=/var/lib/mongodb
POSTGRES_DATA_PATH=/var/lib/postgresql/14/main

# Backup Configuration
BACKUP_PATH=/var/backups/lotodb
BACKUP_RETENTION_DAYS=7

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
